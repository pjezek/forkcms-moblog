<?xml version="1.0" encoding="UTF-8"?>
<module>
    <name>Moblog</name>
    <version>1.0.0</version>
    <requirements>
        <minimum_version>3.0.0</minimum_version>
    </requirements>
    <description>
        <![CDATA[
            This module can periodically read emails and convert them to blog posts.
            You have to change parameters.yml. (There is no UI yet).
        ]]>
    </description>
    <authors>
        <author>
            <name><![CDATA[Patrick Jezek]]></name>
            <url><![CDATA[http://www.jezek.ch]]></url>
        </author>
    </authors>
    <cronjobs>
        <cronjob minute="*/5" hour="0" day-of-month="*" month="*" day-of-week="*" action="FetchAndProcessEmails"><![CDATA[Fetches emails and convert them to blog posts.]]></cronjob>
    </cronjobs>
</module>
